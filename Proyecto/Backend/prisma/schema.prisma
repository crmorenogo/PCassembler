datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id_usuario  Int      @id @default(autoincrement())
  nombre      String
  correo      String   @unique
  contrasena  String
  rol         String   @default("usuario")
  resetToken String? // <-- Agrega esta lÃ­nea (nullable porque puede ser null)
  Ensambles   Ensamble[]
  Notificaciones Notificacion[]
  Carritos    Carrito[]
  HistorialCompras HistorialCompras[]
}

model Componente {
  id_componente    Int     @id @default(autoincrement())
  nombre           String
  categoria        String
  precio           Float
  marca            String
  especificaciones String?
  Ensamble_Componente Ensamble_Componente[]
  Carritos         Carrito[]
}

model Ensamble {
  id_ensamble      Int     @id @default(autoincrement())
  id_usuario       Int
  nombre           String
  costo_total      Float   @default(0)
  fecha_creacion   DateTime @default(now())
  Usuario          Usuario @relation(fields: [id_usuario], references: [id_usuario])
  Ensamble_Componente Ensamble_Componente[]
  Ensambles_Top    Ensambles_Top?
}

model Ensamble_Componente {
  id_ensamble    Int
  id_componente  Int
  Ensamble       Ensamble  @relation(fields: [id_ensamble], references: [id_ensamble])
  Componente     Componente @relation(fields: [id_componente], references: [id_componente])
  @@id([id_ensamble, id_componente])
}

model Notificacion {
  id_notificacion Int      @id @default(autoincrement())
  id_usuario      Int
  mensaje         String
  fecha           DateTime @default(now())
  Usuario         Usuario  @relation(fields: [id_usuario], references: [id_usuario])
}

model Carrito {
  id_carrito     Int      @id @default(autoincrement())
  id_usuario     Int
  id_componente  Int
  cantidad       Int      @default(0)
  Usuario        Usuario  @relation(fields: [id_usuario], references: [id_usuario])
  Componente     Componente @relation(fields: [id_componente], references: [id_componente])
}

model HistorialCompras {
  id_compra      Int      @id @default(autoincrement())
  id_usuario     Int
  fecha          DateTime @default(now())
  total          Float
  Usuario        Usuario  @relation(fields: [id_usuario], references: [id_usuario])
}

model Ensambles_Top {
  id_top         Int      @id @default(autoincrement())
  id_ensamble    Int      @unique
  descripcion    String
  calificacion   Int      
  precio_aproximado Float
  Ensamble       Ensamble @relation(fields: [id_ensamble], references: [id_ensamble])
}
